#include <stdio.h>
#include <stdlib.h>

int main() {
	
    int sayi1,sayi2,secim;
    
    printf("ilk sayi giriniz: ");
    scanf("%d",&sayi1);
    
    printf("ikinci sayiyi giriniz: ");
    scanf("%d",&sayi2);
	    
    printf("\n****Islem Secenekleri****\n");
    printf("1-Toplama\n");
    printf("2-Cikarma\n");
    printf("3-Carpma\n");
    printf("4-Bolme\n");
    
    printf("\nisleminizi secin: ");
    scanf("%d",&secim);
    
    switch(secim)
    {
    	case 1:
    		printf("Sayilar toplami: %d",(sayi1+sayi2));
    		break;
    	case 2:
    		printf("Sayilar farki: %d",(sayi1-sayi2));
    		break;
    	case 3:
    		printf("Sayilar carpimi: %d",(sayi1*sayi2));
    		break;
    	case 4:
    		printf("Sayilar bolumu: %d",(sayi1/sayi2));
    		break;
    					
	}

	
	return 0;
}

